<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:layout_margin="20dp"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/title_of_ItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_rounded"
            android:padding="10dp"
            android:text="Item Details"
            android:textColor="#FFFFFF" />
        <ListView
            android:id="@+id/item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_of_ItemDetails"/>
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_list"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearLayout_add_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@mipmap/ic_add_line_item" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="assssssssssssssssss" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Total Summary"
                android:textColor="#3FF" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/subtotal_ll">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="100dp"
                    android:background="@null"
                    android:maxWidth="100dp"
                    android:text="Subtotal"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_edittext" />

                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="100"
                    android:text="@string/Zero"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/subtotal_ll"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout_item_details"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3333"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="5"
                        android:layout_gravity="top">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:singleLine="true"
                            android:text="Sales Tax"
                            android:maxWidth="50dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="20dp"
                            android:background="@mipmap/ic_edittext" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        >

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:singleLine="true"
                            android:text="Total"
                            android:maxWidth="50dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="20dp"
                            android:background="@mipmap/ic_edittext" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3333"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/sales_tax_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tax %"
                        android:layout_weight="5"
                        android:padding="10dp"
                        android:maxWidth="50dp"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <AutoCompleteTextView
                        android:id="@+id/money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:focusable="false"
                        android:singleLine="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3333"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sales_tax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_gravity="end"
                        android:maxWidth="50dp"
                        android:text="@string/Zero"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:maxWidth="50dp"
                        android:layout_weight="5"
                        android:text="@string/Zero"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>